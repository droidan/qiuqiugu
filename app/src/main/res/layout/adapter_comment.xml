<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tx_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:textColor="@color/color_dddddd"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tx_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_comment_name"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x10"
        android:paddingBottom="10dp"
        android:textSize="16dp" />

    <View
        android:id="@+id/view_full_top_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignParentTop="true"
        android:background="@color/color_dddddd"
        android:visibility="gone" />

    <View
        android:id="@+id/view_margin_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignLeft="@+id/tx_comment_name"
        android:layout_alignParentBottom="true"
        android:background="@color/color_dddddd" />

    <View
        android:id="@+id/view_full_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:background="@color/color_dddddd"
        android:visibility="gone" />

</RelativeLayout>