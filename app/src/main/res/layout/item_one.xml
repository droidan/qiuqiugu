<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <TextView
        android:id="@+id/tx_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_product_thumb"
        android:layout_margin="5dp"
        android:textColor="@color/color_3a3a3a" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y100"
        android:layout_below="@+id/tx_product_name">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tx_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_f43c3c" />

        <Button
            android:id="@+id/bt_product_buy"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/not_add_to_cart"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/bt_product_collect"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_toLeftOf="@+id/bt_product_buy" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/im_product_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

</RelativeLayout>
