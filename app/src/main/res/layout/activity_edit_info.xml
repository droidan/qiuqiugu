<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efefef"
    tools:context="com.tiger.socol.gu.activity.mine.editInfo.EditInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/AppTheme.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/bottom_border_blue" />

    <RelativeLayout
        android:id="@+id/rl_ei_avatar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:layout_below="@+id/toolbar"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/tx_ed_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="头像"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/im_ed_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/icon_enter" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/im_avatar"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_toStartOf="@+id/im_ed_enter"
            android:src="@mipmap/head_portrait"
            app:riv_border_color="@color/color_ffffff"
            app:riv_border_width="2dip"
            app:riv_corner_radius="@dimen/x50"
            app:riv_mutate_background="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignLeft="@+id/tx_ed_avatar"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ei_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_ei_avatar"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/tx_ed_name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="昵称"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tx_ed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@+id/im_ei_enter2"
            android:text="王晓梅"
            android:textColor="@color/color_b8b8b8"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/im_ei_enter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/icon_enter" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignLeft="@+id/tx_ed_name_info"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ei_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_ei_name"
        android:background="@color/color_ffffff">

        <TextView
            android:id="@+id/tx_ei_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="收货地址"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@+id/im_ei_enter1"
            android:text="修改/添加"
            android:textColor="@color/color_b8b8b8"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/im_ei_enter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/icon_enter" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line" />

    </RelativeLayout>

</RelativeLayout>
